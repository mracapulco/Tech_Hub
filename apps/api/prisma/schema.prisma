generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TECHNICIAN
  CLIENT
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String?  @unique
  name      String
  lastName  String?
  password  String
  avatarUrl String?
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships UserCompanyMembership[]
}

model Company {
  id        String   @id @default(uuid())
  cnpj      String?  @unique
  name      String
  fantasyName String?
  address   String?
  city      String?
  state     String?
  zipcode   String?
  phone     String?
  logoUrl   String?
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships UserCompanyMembership[]
  maturityAssessments MaturityAssessment[]
}

model UserCompanyMembership {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
  role      Role
  createdAt DateTime @default(now())

  @@unique([userId, companyId])
}

// Registro de testes de maturidade de segurança
model MaturityAssessment {
  id         String   @id @default(uuid())
  date       String
  company    Company  @relation(fields: [companyId], references: [id])
  companyId  String
  answers    Json?
  groupScores Json?
  totalScore Int?
  maxScore   Int?
  createdAt  DateTime @default(now())

  // Relação 1:1 com análise por IA (quando existir)
  analysis   MaturityAnalysis?
}

// Catálogo global de tipos de dispositivo (ex.: Nobreak, Servidor, Rack, Switch)
model DeviceType {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  brands      BrandDeviceType[]
  devices     Device[]
}

// Catálogo global de marcas (ex.: APC, Dell, HP)
model Brand {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  logoUrl     String?
  status      String   @default("ACTIVE")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deviceTypes BrandDeviceType[]
  devices     Device[]
}

// Relação N:N entre Marcas e Tipos de Dispositivo
model BrandDeviceType {
  id            String     @id @default(uuid())
  brand         Brand      @relation(fields: [brandId], references: [id])
  brandId       String
  deviceType    DeviceType @relation(fields: [deviceTypeId], references: [id])
  deviceTypeId  String
  createdAt     DateTime   @default(now())

  @@unique([brandId, deviceTypeId])
}

// Inventário de dispositivos
model Device {
  id           String     @id @default(uuid())
  deviceType   DeviceType @relation(fields: [deviceTypeId], references: [id])
  deviceTypeId String
  brand        Brand      @relation(fields: [brandId], references: [id])
  brandId      String
  model        String
  slug         String?
  uHeight      Int?
  isFullDepth  Boolean    @default(false)
  frontImage   Boolean    @default(false)
  rearImage    Boolean    @default(false)
  weight       Float?
  weightUnit   String?    @default("kg")
  airflow      String?
  consolePorts Json?
  interfaces   Json?
  moduleBays   Json?
  status       String     @default("ACTIVE")
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

// Configurações globais (ex.: chaves de integração) com valor criptografado
model Setting {
  id         String   @id @default(uuid())
  key        String   @unique
  valueEnc   String
  updatedBy  String?
  updatedAt  DateTime @default(now()) @updatedAt
}

// Resultado de análise por IA atrelado a um teste de maturidade
model MaturityAnalysis {
  id            String             @id @default(uuid())
  assessment    MaturityAssessment @relation(fields: [assessmentId], references: [id])
  assessmentId  String             @unique
  content       Json
  provider      String?
  model         String?
  createdById   String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}